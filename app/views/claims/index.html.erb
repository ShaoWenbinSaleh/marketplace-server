<p id="notice"><%= notice %></p>

<h1>Claims</h1>

<table>
  <thead>
    <tr>
      <th>Claimant</th>
      <th>Claimant type</th>
      <th>Entitlement</th>
      <th>Authorization count</th>
      <th>Authorized at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @claims.each do |claim| %>
      <tr>
        <td><%= claim.claimant_id %></td>
        <td><%= claim.claimant_type %></td>
        <td><%= claim.entitlement_id %></td>
        <td><%= claim.authorization_count %></td>
        <td><%= claim.authorized_at %></td>
        <td><%= link_to 'Show', claim %></td>
        <td><%= link_to 'Edit', edit_claim_path(claim) %></td>
        <td><%= link_to 'Destroy', claim, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

